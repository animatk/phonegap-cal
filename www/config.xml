<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.calendario.ford"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->
    <name>Aplicacion Calendario</name>
    <description>
        Aplicacion calendario que se conecta con las API de Facebook Twitter y Outlook
    </description>
    <author href="https://irisdev.co/calendar_app" email="alejandro.santos@grupoiris.co">
			Alejandro  St.
    </author>
	
	<access origin="*"/>
	
	<!-- Define app icon for each platform. -->
    <icon src="icon.png" />
    <icon src="res/icon/icon.png" gap:platform="android" gap:density="ldpi" />
    <icon src="res/icon/icon.png" gap:platform="android" gap:density="mdpi" />
    <icon src="res/icon/icon.png" gap:platform="android" gap:density="hdpi" />
    <icon src="res/icon/icon.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="res/icon/icon.png" gap:platform="blackberry" />
    <icon src="res/icon/icon.png" gap:platform="blackberry" gap:state="hover"/>
    <icon src="res/icon/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="res/icon/icon.png" gap:platform="ios" width="72" height="72" />
    <icon src="res/icon/icon.png" gap:platform="ios" width="114" height="114" />
    <icon src="res/icon/icon.png" gap:platform="ios" width="144" height="144" />
    <icon src="res/icon/icon.png" gap:platform="webos" />
    <icon src="res/icon/icon.png" gap:platform="winphone" />
    <icon src="res/icon/icon.png" gap:platform="winphone" gap:role="background" />
 
    <!-- Define app splash screen for each platform. -->
    <gap:splash src="res/screen/screen.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/screen.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/screen.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/screen.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="res/screen/screen.png" gap:platform="blackberry" />
    <gap:splash src="res/screen/screen.png" gap:platform="ios"     width="320" height="480" />
    <gap:splash src="res/screen/screen.png" gap:platform="ios"     width="640" height="960" />
    <gap:splash src="res/screen/screen.png" gap:platform="ios"     width="640" height="1136" />
    <gap:splash src="res/screen/screen.png" gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="res/screen/screen.png" gap:platform="ios"     width="1024" height="768" />
    <gap:splash src="res/screen/screen.png" gap:platform="winphone" />
	
</widget>